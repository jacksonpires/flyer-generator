<h1 class="page-header">Convite</h1>

<div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            Convite
        </div>
        <div class="panel-body">
            <%= image_tag "/generated/#{@flyer.id}/#{@flyer.id}_#{@flyer.updated_at.strftime("%Y%m%d%H%M%S")}_sci.jpg", style: "max-width: 600px; max-height: 600px;" %>
        </div>
        <div class="panel-footer">
            <%= link_to 'Editar', edit_flyer_path(@flyer) %> |
            <%= link_to "Salvar Imagem", "/generated/#{@flyer.id}_sci.jpg", download: "#{@flyer.id}_sci.jpg" %>
        </div>
    </div>
</div>